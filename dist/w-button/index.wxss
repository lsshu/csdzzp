@import '../common/theme/global.wxss';

.wuss-.wuss--normalize {
  padding: 0;
  margin: 10px;
  outline: none;
  box-shadow: none;
  border-radius: 4px;
  text-shadow: none;
  font-size: 16px;
  border: 1px solid transparent;
  min-height: 42px;
  transition: background-color 200ms ease 0s, opacity 200ms ease 0s;
}

.wuss-.wuss--full {
  width: 100%;
  border-radius: 0;
  margin: 10px 0;
}

.wuss-.wuss--inline {
  display: inline-block;
  padding: 0 10px;
}

.wuss-.wuss--disabled {
  opacity: 0.4;
}

.wuss-.wuss--normalize.wuss--default {
  background-color: rgb(255, 255, 255);
  border-color: rgb(223, 223, 223);
  color: rgb(51, 51, 51);
}

.wuss-.wuss--normalize.wuss--default.wuss--hover {
  background-color: rgb(236, 236, 236);
}

.wuss-.wuss--primary {
  background-color: rgb(69, 143, 246);
  border-color: rgb(68, 142, 246);
  color: rgb(255, 255, 255);
}

.wuss-.wuss--primary.wuss--hover {
  background-color: rgb(28, 117, 243);
}

.wuss-.wuss--primary.wuss--disabled {
  color: rgb(255, 255, 255);
}

.wuss-.wuss--normalize.wuss--warn {
  background-color: rgb(255, 153, 0);
  border-color: rgb(255, 153, 0);
  color: rgb(255, 255, 255);
}

.wuss-.wuss--normalize.wuss--warn.wuss--hover {
  background-color: rgb(255, 136, 0);
}

.wuss-.wuss--normalize.wuss--warn.wuss--disabled {
  color: rgb(255, 255, 255);
}

.wuss-.wuss--normalize.wuss--info {
  background-color: rgb(85, 178, 240);
  border-color: rgb(85, 178, 240);
  color: rgb(255, 255, 255);
}

.wuss-.wuss--normalize.wuss--info.wuss--hover {
  background-color: rgb(43, 159, 236);
}

.wuss-.wuss--normalize.wuss--info.wuss--disabled {
  color: rgb(255, 255, 255);
}

.wuss-.wuss--normalize.wuss--danger {
  background-color: rgb(239, 71, 58);
  color: rgb(255, 255, 255);
}

.wuss-.wuss--normalize.wuss--danger.wuss--hover {
  background-color: rgb(228, 33, 18);
}

.wuss-.wuss--normalize.wuss--danger.wuss--disabled {
  color: rgb(255, 255, 255);
}

.wuss-.wuss--flat {
  border-radius: 0;
}

.wuss-.wuss--normalize.wuss--default.wuss--ghost {
  border-color: rgb(223, 223, 223);
  color: rgb(51, 51, 51);
  background: transparent;
}

.wuss-.wuss--normalize.wuss--default.wuss--ghost.wuss--hover {
  background-color: rgb(223, 223, 223);
  color: #ffffff;
}

.wuss-.wuss--primary.wuss--ghost {
  border-color: rgb(68, 142, 246);
  color: rgb(68, 142, 246);
  background: transparent;
}

.wuss-.wuss--primary.wuss--ghost.wuss--hover {
  background-color: rgb(28, 117, 243);
  color: #ffffff;
}

.wuss-.wuss--normalize.wuss--warn.wuss--ghost {
  border-color: rgb(255, 153, 0);
  color: rgb(255, 153, 0);
  background: transparent;
}

.wuss-.wuss--normalize.wuss--warn.wuss--ghost.wuss--hover {
  background-color: rgb(255, 136, 0);
  color: #ffffff;
}

.wuss-.wuss--normalize.wuss--info.wuss--ghost {
  border-color: rgb(85, 178, 240);
  color: rgb(85, 178, 240);
  background: transparent;
}

.wuss-.wuss--normalize.wuss--info.wuss--ghost.wuss--hover {
  background-color: rgb(43, 159, 236);
  color: #ffffff;
}

.wuss-.wuss--normalize.wuss--danger.wuss--ghost {
  border-color: rgb(239, 71, 58);
  color: rgb(239, 71, 58);
  background: transparent;
}

.wuss-.wuss--normalize.wuss--danger.wuss--ghost.wuss--hover {
  background-color: rgb(228, 33, 18);
  color: #ffffff;
}

.wuss-.wuss--dashed.wuss--normalize {
  border-style: dashed;
}

.w-icon {
  margin-right: 5px;
}

.wuss-.wuss--normalize.wuss--custom-hover {
  opacity: 0.6;
}

.wuss-.wuss--normalize.wuss--circle {
  border-radius: 42px;
}

.w-activity-indicator {
  display: inline-block;
  vertical-align: middle;
  margin-right: 5px;
}

.wuss-activity-indicator {
  width: 15px;
  height: 15px;
  vertical-align: middle;
}
